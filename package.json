{
  "name": "jhonweatherapp_electron",
  "version": "1.0.0",
  "description": "A Weather App Made By Jhon",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JhonLikesFloppa/JhonWeatherApp.git"
  },
  "keywords": [
    "Jhon",
    "JhonLikesFloppa",
    "JhonWeatherApp"
  ],
  "author": "Jhon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JhonLikesFloppa/JhonWeatherApp/issues"
  },
  "homepage": "https://github.com/JhonLikesFloppa/JhonWeatherApp#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.0.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "JhonWeatherApp",
            "buildIdentifier": "jhonweatherapp_electron",
            "publishers": "Jhon"            
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
